  "devDependencies": {
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.4"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "mongoose": "^8.8.3",
    "mquery": "^3.2.3"
  }
}
